<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hhb.project.cardgame.LoginController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label text="Memory Game">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <Label text="Connexion / Inscription">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" prefWidth="300.0" style="-fx-font-size: 16px;">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </TextField>

    <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="300.0" style="-fx-font-size: 16px;" />

    <Label fx:id="messageLabel" text="" textAlignment="CENTER" wrapText="true" prefWidth="300.0">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="45.0" prefWidth="300.0" text="SE CONNECTER" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="45.0" prefWidth="300.0" text="S'INSCRIRE" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
</VBox>